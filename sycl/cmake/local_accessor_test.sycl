// SYCL include(s).
#include <CL/sycl.hpp>

int main() {

    // Check if sycl::local_accessor is available.
    cl::sycl::queue queue;
    queue
        .submit([](cl::sycl::handler& h) {
            ::sycl::local_accessor<int> dummy(10, h);
            (void)dummy;
        })
        .wait_and_throw();

    // Return gracefully.
    return 0;
}
